<div id="<%= dom_id insight %>"  class="note-wrapper"
class="note-wrapper">
  <p class="bg-yellow-200 flex items-center p-2 cursor-pointer">
    <strong class="block font-medium">
      <%= insight.title %>
    </strong>
  </p>

  <p class="my-5">   
    <%= insight.text %>
  </p>

  <% if action_name != "show" %>
  <div class="absolute w-100 bottom-0 right-2 gap-2">
    <%= link_to "Show ", insight, class: "btn-show" %>
    <%= link_to 'Edit', edit_insight_path(insight), class: "btn-edit" %>
   </div>
  <% end %>
</div>
