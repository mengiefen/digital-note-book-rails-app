<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-2xl text-blue-700 uppercase">Notes</h1>
    <%= link_to 'New note', new_note_path, class: "btn blue-green" %>
  </div>

  <div id="notes" class="notes-container" data-controller="notes">
    <%= render @notes %>
  </div>
</div>
